<Window x:Class="Demo.Finish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Finish" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Выполнение заявки" HorizontalAlignment="Center" Margin="0,77,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ApplicationIdComboBox" HorizontalAlignment="Left" Margin="162,144,0,0" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="AcceptedDatePicker" HorizontalAlignment="Left" Margin="182,217,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="CompletedDatePicker" HorizontalAlignment="Left" Margin="172,293,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CommentsTextBox" HorizontalAlignment="Left" Margin="529,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Height="88"/>
        <RadioButton Content="В ожидании" HorizontalAlignment="Left" Margin="70,377,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NotDoneRadioButton" Content="Не выполнено" HorizontalAlignment="Left" Margin="444,377,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="DoneRadioButton" Content="Выполнено" HorizontalAlignment="Left" Margin="649,377,0,0" VerticalAlignment="Top"/>
        <Label Content="ID заявки" HorizontalAlignment="Left" Margin="70,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Принят в работу" HorizontalAlignment="Left" Margin="50,215,0,0" VerticalAlignment="Top"/>
        <Label Content="Работа выполнена" HorizontalAlignment="Left" Margin="50,291,0,0" VerticalAlignment="Top"/>
        <Label Content="Статус заявки" HorizontalAlignment="Left" Margin="50,344,0,0" VerticalAlignment="Top"/>
        <Label Content="Комментарий" HorizontalAlignment="Left" Margin="529,155,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="InProgressRadioButton" Content="В работе" HorizontalAlignment="Left" Margin="256,377,0,0" VerticalAlignment="Top"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="379,329,0,0" VerticalAlignment="Top" Click="SaveButton_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="593,329,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
