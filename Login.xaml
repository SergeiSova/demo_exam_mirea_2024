<Window x:Class="Demo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Left" Margin="329,61,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="214,188,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,355,0,0" VerticalAlignment="Top" Height="41" Width="144" Click="Button_Click"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Margin="329,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="261" Height="40"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="214,254,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="password" HorizontalAlignment="Left" Margin="329,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" Height="40"/>
    </Grid>
</Window>
