<Window x:Class="Demo.Work"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Work" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="IdComboBox" HorizontalAlignment="Left" Margin="149,111,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID  заявки" HorizontalAlignment="Left" Margin="39,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FaultTypeTextBox" HorizontalAlignment="Left" Margin="149,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="ExecutorComboBox" HorizontalAlignment="Left" Margin="149,213,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Исполнитель" HorizontalAlignment="Left" Margin="39,217,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="В ожидании" HorizontalAlignment="Left" Margin="71,395,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="InProgressRadioButton" Content="В работе" HorizontalAlignment="Left" Margin="229,395,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NotDoneRadioButton" Content="Не выполнено" HorizontalAlignment="Center" Margin="0,395,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="DoneRadioButton" Content="Выполнено" HorizontalAlignment="Left" Margin="583,395,0,0" VerticalAlignment="Top"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="229,322,0,0" VerticalAlignment="Top" Click="SaveButton_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="530,322,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Описание неисправности" HorizontalAlignment="Left" Margin="513,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="RepairTypeTextBox" HorizontalAlignment="Left" Margin="482,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="230" Height="96"/>
        <Label Content="Обработка заявки" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" Height="32" Width="128"/>
        <Label Content="Вид ремонта" HorizontalAlignment="Left" Margin="31,160,0,0" VerticalAlignment="Top"/>
        <Label Content="Статус заявки" HorizontalAlignment="Left" Margin="59,344,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
