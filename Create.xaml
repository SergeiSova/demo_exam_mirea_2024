<Window x:Class="Demo.Create"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Create" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="162,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="21"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Phone" HorizontalAlignment="Left" Margin="162,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="162,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SN" HorizontalAlignment="Left" Margin="638,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="S/N" HorizontalAlignment="Left" Margin="486,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Com" HorizontalAlignment="Left" Margin="638,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Комментарий" HorizontalAlignment="Left" Margin="486,194,0,0" VerticalAlignment="Top"/>
        <Label Content="Оборудование" HorizontalAlignment="Left" Margin="486,92,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ClearButton" Content="Очистить" HorizontalAlignment="Left" Margin="118,300,0,0" VerticalAlignment="Top" Click="Button_Click_1_2"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="360,305,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="CloseButton" Content="Назад" HorizontalAlignment="Left" Margin="595,305,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Label Content="Формирование заявки" HorizontalAlignment="Left" Margin="391,35,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Device" HorizontalAlignment="Left" Margin="638,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
