<Window x:Class="Demo.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="10">
            <TextBlock Text="Статистика пользователей и задач" FontWeight="Bold" FontSize="14"/>
            <TextBlock x:Name="RegisteredUsersText" Text="Загрузка..."/>
            <TextBlock x:Name="TasksCreatedText" Text="Загрузка..."/>
            <TextBlock x:Name="AverageCompletionTimeText" Text="Загрузка..."/>
            <TextBlock x:Name="TasksStatusText" Text="Загрузка..."/>
            <TextBlock x:Name="UniqueDevicesText" Text="Загрузка..."/>
            <TextBlock x:Name="TopExecutorText" Text="Загрузка..."/>
        </StackPanel>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="388,32,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
